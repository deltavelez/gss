#include "dv_types.h"
#include "dv_real.h"

FLOAT_T lb_re_sqr(FLOAT_T x)
{
  return x*x;
}

FLOAT_T lb_re_fsign(FLOAT_T x)
{
  if (x > 0) return 1;
  if (x < 0) return -1;
  return 0;
}

U_INT_8_T lb_re_is_power_of_two(U_INT_32_T x)
{
 U_INT_8_T bit_size=0;
  while (((x % 2) == 0) && (x > 1)) /* While x is even and > 1 */
    {
      x /= 2;
      bit_size++;
    }
  if (x == 1) return bit_size;
  return 0;
}

